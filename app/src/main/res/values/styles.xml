<resources>

    <style name="Widget.Theme.StashAppAndroidTV.MyView" parent="">
        <item name="android:background">@color/default_background</item>
        <item name="imageCardViewContentStyle">@style/Widget.Leanback.ImageCardView.ContentStyle
        </item>
    </style>

    <style name="TitleBarButton" parent="Widget.Theme.StashAppAndroidTV.MyView">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_marginTop">@dimen/title_bar_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_bar_margin</item>
        <item name="android:layout_marginStart">@dimen/title_bar_start_end_margin</item>
        <item name="android:layout_marginEnd">@dimen/title_bar_start_end_margin</item>
        <item name="android:layout_height">@dimen/title_bar_icon_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Widget.Theme.StashAppAndroidTV.ExtraWrapper" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/lb_basic_card_content_text_color</item>
        <item name="android:textSize">@dimen/lb_basic_card_content_text_size</item>
    </style>

    <style name="Widget.Theme.StashAppAndroidTV.SceneExtraText" parent="Widget.Theme.StashAppAndroidTV.ExtraWrapper">
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">@dimen/scene_extra_spacing</item>
    </style>

    <style name="Widget.Theme.StashAppAndroidTV.SceneExtraIcon" parent="Widget.Theme.StashAppAndroidTV.ExtraWrapper">
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:layout_marginStart">@dimen/scene_extra_spacing</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

    <style name="ImageActivityButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:background">@drawable/image_button_selector</item>
        <item name="android:nextFocusUp">@id/rating_bar</item>
    </style>

    <style name="GridFooterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardTextOverlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DebugInfoOverlayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFBEBEBE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="JumpButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
    </style>

</resources>
