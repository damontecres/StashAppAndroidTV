<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/performer_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:layout_margin="5dp"
    android:fadeScrollbars="false"
    android:scrollbarThumbVertical="@drawable/scrollbar_thumb">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/performer_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/stashapp_performer_image"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@id/performer_name"
            app:layout_constraintBottom_toBottomOf="@id/performer_name"
            app:layout_constraintStart_toStartOf="@id/performer_name"
            android:focusable="false"
            android:clipToPadding="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/favorite_button_selector"
            android:fontFamily="@font/fa_solid_900"
            android:text="@string/fa_heart"
            android:textSize="22sp"
            android:textColor="@color/transparent_grey_25" />

            <TextView
                android:id="@+id/performer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/performer_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/stashapp_name" />

            <TextView
                android:id="@+id/performer_disambiguation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/performer_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:textSize="12sp"
                android:text="@string/stashapp_aliases" />

            <TableLayout
                android:id="@+id/performer_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/performer_disambiguation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="3dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
