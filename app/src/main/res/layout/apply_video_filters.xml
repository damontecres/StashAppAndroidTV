<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent_black_50">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stashapp_effect_filters_brightness"/>
            <SeekBar
                android:id="@+id/brightness_adjust"
                android:layout_width="@dimen/filter_seek_bar"
                android:layout_height="wrap_content"
                android:progress="100"
                android:min="0"
                android:max="200"
                />
            <TextView
                android:id="@+id/brightness_adjust_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stashapp_effect_filters_contrast"/>
            <SeekBar
                android:id="@+id/contrast_adjust"
                android:layout_width="@dimen/filter_seek_bar"
                android:layout_height="wrap_content"
                android:progress="100"
                android:min="0"
                android:max="200"
                />
            <TextView
                android:id="@+id/contrast_adjust_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stashapp_effect_filters_saturation"/>
            <SeekBar
                android:id="@+id/saturation_adjust"
                android:layout_width="@dimen/filter_seek_bar"
                android:layout_height="wrap_content"
                android:progress="100"
                android:min="0"
                android:max="200"
                />
            <TextView
                android:id="@+id/saturation_adjust_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stashapp_effect_filters_hue"/>
            <SeekBar
                android:id="@+id/hue_adjust"
                android:layout_width="@dimen/filter_seek_bar"
                android:layout_height="wrap_content"
                android:progress="0"
                android:min="0"
                android:max="360"
                />
            <TextView
                android:id="@+id/hue_adjust_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stashapp_effect_filters_red"/>
            <SeekBar
                android:id="@+id/red_adjust"
                android:layout_width="@dimen/filter_seek_bar"
                android:layout_height="wrap_content"
                android:progressTint="@android:color/holo_red_dark"
                android:progress="100"
                android:min="0"
                android:max="200"
                />
            <TextView
                android:id="@+id/red_adjust_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stashapp_effect_filters_green"/>
            <SeekBar
                android:id="@+id/green_adjust"
                android:layout_width="@dimen/filter_seek_bar"
                android:layout_height="wrap_content"
                android:progressTint="@android:color/holo_green_dark"
                android:progress="100"
                android:min="0"
                android:max="200"
                />
            <TextView
                android:id="@+id/green_adjust_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stashapp_effect_filters_blue"/>
            <SeekBar
                android:id="@+id/blue_adjust"
                android:layout_width="@dimen/filter_seek_bar"
                android:layout_height="wrap_content"
                android:progressTint="@android:color/holo_blue_dark"
                android:progress="100"
                android:min="0"
                android:max="200"
                />
            <TextView
                android:id="@+id/blue_adjust_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                />
        </TableRow>
    </TableLayout>
    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/rotate_left_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/fa_solid_900"
            android:textColor="@android:color/white"
            android:text="@string/fa_rotate_left" />

        <Button
            android:id="@+id/rotate_right_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/fa_solid_900"
            android:textColor="@android:color/white"
            android:text="@string/fa_rotate_right" />

        <Button
            android:id="@+id/apply_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:text="@string/stashapp_actions_submit" />

        <Button
            android:id="@+id/reset_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:text="@string/stashapp_effect_filters_reset_filters" />
    </LinearLayout>

</LinearLayout>
