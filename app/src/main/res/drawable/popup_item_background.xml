<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="@color/popup_selected_background"/>
    </item>
    <item android:state_selected="true" android:color="@color/popup_selected_background">
        <shape android:shape="rectangle">
            <solid android:color="@color/popup_selected_background" />
        </shape>
    </item>
    <item android:color="@color/popup_background">
        <shape android:shape="rectangle">
            <solid android:color="@color/popup_background" />
        </shape>
    </item>
</selector>
